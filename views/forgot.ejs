<head>
    <!-- Styles -->
    <link rel="stylesheet" href="/views/css/bootstrap.min.css">
    <!-- Icons CDN -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://kit.fontawesome.com/761d42c757.js" crossorigin="anonymous"></script>
</head>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center">
            <h1 class="mb-3">
                <img src="/views/assets/cyber-security-icon.jpg" alt="icon" width="20%" />
            </h1>
            <h2>
                Forgot Password
            </h2>
            <%- include ("./messages") %>
            <form action="/forgot" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="username" class="form-control" placeholder="Enter Email" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Send me a password reset link</button>
            </form>
            <p class="mt-4">
                Remember your password? <a href="/login">Login</a>
            </p>
        </div>
    </div>
</div>